@model InternBookAddDto
@{
    ViewData["Title"] = "NewInternBook";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h1>New Intern Book</h1>
<form method="post">
    <span>Description</span>
    <input asp-for="Description" placeholder="Text Description Here.." type="text" class="form-control" />
    <br />
    <span>Intern Day</span>
    <input asp-for="InternDay" type="date" class="form-control" />
    <br />
    <span>Intern Place</span>
    <input asp-for="InternPlaceId" type="text" class="form-control" />
    <br />
    <input type="submit" value="Save Changes" class="btn btn-info" />
</form>

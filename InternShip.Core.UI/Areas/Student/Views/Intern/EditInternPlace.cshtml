@model InternPlaceEditDto
@{
    ViewData["Title"] = "EditInternPlace";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h1>Edit Intern Place</h1>
<form method="post">
    <input asp-for="Id" type="hidden" />
    <span>Place</span>
    <input asp-for="Place" placeholder="Text Place Here.." type="text" class="form-control" />
    <br />
    <span>Start Date</span>
    <input asp-for="StartDate" type="text" readonly class="form-control" />
    <br />
    <span>End Date</span>
    <input asp-for="EndDate" type="text" readonly class="form-control" />
    <br />
    <span>Status</span>
    <select asp-for="Status" class="form-control">
        <option value="">Select Status</option>
        <option value="true">Staj Devam Ediyor</option>
        <option value="false">Staj Bitti</option>
    </select>
    <br />
    <input type="submit" value="Save Changes" class="btn btn-info" />
</form>
